services:
  postgres:
    image: "postgres:latest"
    environment:
      - POSTGRES_PASSWORD=${PGPASSWORD}
  redis:
    image: "redis:latest"
  nginx:
    restart: always
    build:
      dockerfile: Dockerfile.dev
      context: ./nginx
    ports:
      - "3002:80"
  express:
    build:
      dockerfile: Dockerfile.dev
      context: ./server
    volumes:
      - /fib_calculator_kubernetes/node_modules
      - ./server:/fib_calculator_kubernetes
    environment:
      - REDIS_HOST=${REDIS_HOST}
      - REDIS_PORT=${REDIS_PORT}
      - PGUSER=${PGUSER}
      - PGHOST=${PGHOST}
      - PGDATABASE=${PGDATABASE}
      - PGPASSWORD=${PGPASSWORD}
      - PGPORT=${PGPORT}
  client:
    build:
      dockerfile: Dockerfile.dev
      context: ./client
    volumes:
      - /fib_calculator_kubernetes/node_modules
      - ./client:/fib_calculator_kubernetes
    environment:
      - WDS_SOCKET_PORT=0
  worker:
    build:
      dockerfile: Dockerfile.dev
      context: ./worker
    volumes:
      - /fib_calculator_kubernetes/node_modules
      - ./worker:/fib_calculator_kubernetes
    environment:
      - REDIS_HOST=${REDIS_HOST}
      - REDIS_PORT=${REDIS_PORT}
